<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="91dp"
                android:id="@+id/text_hist"
                android:layout_gravity="top"
                android:layout_margin="4dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:layout_width="243dp"
                android:layout_height="38dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/text_res"
                android:layout_weight="0.91"
                android:layout_gravity="center_vertical"
                android:layout_margin="4dp"
                android:textSize="25dp" />

            <Button
                android:layout_width="58dp"
                android:layout_height="38dp"
                android:text="CLR"
                android:id="@+id/btn_clr"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:text="7"
                android:id="@+id/btn_7"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:text="8"
                android:id="@+id/btn_8"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:text="9"
                android:id="@+id/btn_9"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:text="รท"
                android:id="@+id/btn_del"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:text="4"
                android:id="@+id/btn_4"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:text="5"
                android:id="@+id/btn_5"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:text="6"
                android:id="@+id/btn_6"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:text="ร"
                android:id="@+id/btn_umn"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:text="1"
                android:id="@+id/btn_1"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:text="2"
                android:id="@+id/btn_2"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:text="3"
                android:id="@+id/btn_3"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:text="-"
                android:id="@+id/btn_min"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:text="."
                android:id="@+id/btn_sep"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:text="0"
                android:id="@+id/btn_0"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:text="="
                android:id="@+id/btn_rav"
                android:layout_weight="1" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="98dp"
                android:text="+"
                android:id="@+id/btn_plu"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>